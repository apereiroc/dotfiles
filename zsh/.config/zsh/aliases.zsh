# Base
alias grep='grep  --color=auto --exclude-dir={.git}'
alias tree='tree -aC -I .git'

# Git
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gcm='git commit -m'
alias gd='git diff'
alias lg='lazygit'

# Docker
alias lzd='lazydocker'

# Utils
alias ls='lsd --group-directories-first'
alias ll='ls -la'

alias cat='bat -p --paging=never'
